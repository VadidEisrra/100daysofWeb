<div metal:use-macro="load: ../shared/layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <h1>Book Database</h1>

          <div>
            <h2>Available</h2>
            <ol>
                <li tal:repeat="i purchased_books">
                  ${i.title} - ${i.author}
                </li>
            </ol>
          </div>

          <div>
            <h2>Yet to purchase</h2>
            <ol>
                <li tal:repeat="i non_purchased_books">
                  ${i.title} - ${i.author}
                </li>
            </ol>
          </div>

        </div>

    </div>
</div>
